<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.yash.intellih_firebase.DrawingRoomActivity">

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="Drawing Room"
        android:textColor="#d1e0e9"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/powerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/power" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/smoking"
        app:backgroundTint="#2A327D"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:rippleColor="@color/colorAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="64dp"
        android:src="@drawable/motion"
        app:backgroundTint="#2A327D"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton4"
        app:layout_constraintLeft_toRightOf="@+id/floatingActionButton"
        app:rippleColor="@color/colorAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/bulb"
        app:backgroundTint="#2A327D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:rippleColor="@color/colorAccent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton4"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="64dp"
        android:src="@drawable/fan1"
        app:backgroundTint="#2A327D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/floatingActionButton2"
        app:rippleColor="@color/colorAccent" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:text="CURRENT TEMPERATURE"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="25Â°C"
        android:textColor="#d1e0e9"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature" />

</android.support.constraint.ConstraintLayout>